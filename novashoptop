  <script>
    // Dados de exemplo — substitua pelos seus produtos reais
    const products = [
      {id:0,title:'Vestido Rosé',price:129.90,desc:'Vestido leve, ideal para o dia a dia.',img:'https://images.unsplash.com/photo-1541099649105-f69ad21f3246?auto=format&fit=crop&w=800&q=60'},
      {id:1,title:'Blusa Cropped',price:79.90,desc:'Cropped com tecido confortável.',img:'https://images.unsplash.com/photo-1541099649105-f69ad21f3246?auto=format&fit=crop&w=800&q=60'},
      {id:2,title:'Calça Wide Leg',price:149.90,desc:'Calça com caimento fluido.',img:'https://images.unsplash.com/photo-1520975918911-85f5a7f4f7d5?auto=format&fit=crop&w=800&q=60'},
      {id:3,title:'Bolsa tiracolo',price:199.90,desc:'Bolsa prática para o dia a dia.',img:'https://images.unsplash.com/photo-1542291026-7eec264c27ff?auto=format&fit=crop&w=800&q=60'},
      {id:4,title:'T-shirt Básica',price:49.90,desc:'Camiseta básica confortável.',img:'https://images.unsplash.com/photo-1512436991641-6745cdb1723f?auto=format&fit=crop&w=800&q=60'},
      {id:5,title:'Sandália Rasteira',price:89.90,desc:'Sandália versátil para várias ocasiões.',img:'https://images.unsplash.com/photo-1526178614460-7a9d3b1d6b2e?auto=format&fit=crop&w=800&q=60'},
      {id:6,title:'Maxi Colar',price:69.90,desc:'Colar statement para completar o look.',img:'https://images.unsplash.com/photo-1520975918911-85f5a7f4f7d5?auto=format&fit=crop&w=800&q=60'},
      {id:7,title:'Jaqueta Jeans',price:219.90,desc:'Jaqueta com modelagem moderna.',img:'https://images.unsplash.com/photo-1512436991641-6745cdb1723f?auto=format&fit=crop&w=800&q=60'}
    ];

    const igTemplatesData = [
      {title:'Lançamento',tag:'Nova coleção',cta:'Compre agora'},
      {title:'Promoção',tag:'-20% OFF',cta:'Use o cupom: NOVA20'},
      {title:'Look do dia',tag:'Inspiração',cta:'Marque @nova.shoptop'},
      {title:'Detalhe',tag:'Textura e tecido',cta:'Veja detalhes'},
      {title:'Depoimento',tag:'Cliente feliz',cta:'Avalie-nos'},
      {title:'Frete',tag:'Frete grátis',cta:'Só hoje'}
    ];

    // Render products
    const grid = document.getElementById('productGrid');
    products.forEach(p=>{
      const card = document.createElement('div'); card.className='card';
      card.innerHTML = `
        <img loading="lazy" src="${p.img}" alt="${p.title}" />
        <div class="title">${p.title}</div>
        <div class="small">${p.desc}</div>
        <div class="price">R$ ${p.price.toFixed(2)}</div>
        <div style="margin-top:8px;display:flex;gap:8px">
          <button class="ghost" onclick="openModal(${p.id})">Ver</button>
          <button class="btn" onclick="quickAdd(${p.id})">Comprar</button>
        </div>
      `;
      grid.appendChild(card);
    });

    // Render IG templates
    const igRoot = document.getElementById('igTemplates');
    igTemplatesData.forEach(t=>{
      const el = document.createElement('div'); el.className='ig-card';
      el.innerHTML = `
        <div class="ig-hero">${t.tag}</div>
        <div>
          <h3>${t.title}</h3>
          <div class="tagline">${t.cta}</div>
        </div>
        <div style="display:flex;justify-content:space-between;align-items:center">
          <div class="small">@nova.shoptop</div>
          <div class="small">www.nova-shoptop.com</div>
        </div>
      `;
      igRoot.appendChild(el);
    });

    // Modal logic
    let currentQty = 1; let currentId = null;
    function openModal(id){
      const p = products.find(x=>x.id===id);
      currentQty = 1; currentId = id;
      document.getElementById('modalImg').src = p.img;
      document.getElementById('modalTitle').innerText = p.title;
      document.getElementById('modalDesc').innerText = p.desc;
      document.getElementById('modalPrice').innerText = 'R$ '+p.price.toFixed(2);
      document.getElementById('qtyVal').innerText = currentQty;
      document.getElementById('modalBackdrop').style.display = 'flex';
    }
    document.getElementById('modalBackdrop').addEventListener('click',function(e){ if(e.target===this) this.style.display='none'; });
    function changeQty(delta){ currentQty = Math.max(1,currentQty+delta); document.getElementById('qtyVal').innerText=currentQty }
    function addToCart(){ alert('Adicionado '+currentQty+' unidade(s) ao carrinho — integração de pagamento não implementada.'); document.getElementById('modalBackdrop').style.display='none' }
    function quickAdd(id){ const p = products.find(x=>x.id===id); alert('Compra rápida: '+p.title+' — implementar checkout.'); }

  </script>
